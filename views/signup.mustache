<body>

    <h1>Sign Up!</h1>

    <form action="/signup" method="post">
        <label for="">Name</label><input type="text" name="name" placeholder="Your Name" required><br>
        <label for="">UserName</label><input type="text" name="username" placeholder="Your Username" required><br>
        <label for="">Email</label><input type="email" name="email" placeholder="yourEmail@Email.com" required><br>
        <label for="">Password</label><input type="password" name="password" placeholder="Your Password" required><br>
        <label for="">Avatar</label><input type="text" name="avatar" placeholder="your avatar here">
        <label for="">University</label><input type="text" name="university">
        <label for="">Job</label><input type="text" name="job">
        <label for="">Company</label><input type="text" name="company">
        <label for="">Skills</label><input type="text" name="skills">
        <label for="">Phone</label><input type="text" name="phone">
        <label for="">City</label><input type="text" name="address.city">
        <label for="">Country</label><input type="text" name="address.country">
        <button type="submit">Sign up!</button>

    </form>

</body>

